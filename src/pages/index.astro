---
import BaseLayout from '~/layouts/BaseLayout.astro';
import SocialLinks from '~/shared/components/SocialLinks.astro';
---

<style lang="scss">
	.homepage {
		margin-top: var(--size-8);
		& > section:not(:first-child) {
			margin-top: var(--size-10);
			margin-bottom: var(--size-10);
		}

		h2 {
			font-size: var(--font-size-fluid-2);
			color: var(--text1);
			text-align: center;
			max-inline-size: 100%;
		}
	}

	.hero {
		&__container {
			display: flex;
			align-items: center;
			gap: var(--size-6);
		}

		&__leftSide {
			&-subtitle {
				font-size: var(--font-size-2);
				color: var(--text2);
				opacity: 0.6;
				margin-bottom: var(--size-3);
			}

			&-paragraph {
				font-size: var(--font-size-3);
				margin-bottom: var(--size-3);
			}
		}

		&__rightSide {
			width: 100%;
			max-width: 300px;
			aspect-ratio: var(--ratio-square);

			@media screen and (max-width: 768px) {
				display: none;
			}
		}

		&__image {
			position: relative;
			width: 100%;
			height: 100%;
		}
	}

	.name {
		color: var(--accent);
	}

	.blob {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;

		&::before {
			content: '';
			position: absolute;
			top: 0;
			left: 0;
			width: 100%;
			height: 100%;
			opacity: 0.3;
			filter: blur(15px);
			background: #fff;

			transition: 0.5s ease;
			-webkit-animation: blob 12s linear infinite alternate;
			animation: blob 12s linear infinite alternate;
		}

		&:before {
			background: linear-gradient(165deg, var(--brand), var(--accent));
		}
	}

	.about {
		background-color: var(--surface2);
		padding: var(--size-4) 0 var(--size-8) 0;
		border-radius: var(--size-4);
		&__container {
			display: flex;
			align-items: center;
			gap: var(--size-3);
		}

		&__leftSide {
			width: 100%;
			max-width: 300px;
			aspect-ratio: var(--ratio-square);

			& > picture {
				width: 100%;
				height: 100%;
				display: flex;
				align-items: center;
				justify-content: center;
				position: relative;

				& > img {
					width: 75%;
					height: 75%;
					object-fit: cover;
					border-radius: var(--radius-round);
					border: var(--border-size-2) solid var(--accent);
				}

				&:after {
					content: '';
					position: absolute;
					width: 60%;
					height: 12%;
					bottom: 15%;
					border-radius: 50%;
					box-shadow: 0 60px 24px rgba(255, 188, 47, 0.2);
				}
			}
		}

		&__rightSide {
			align-self: flex-start;
			padding-top: var(--size-6);

			& .accent {
				color: var(--accent);
			}

			&-content > li {
				max-inline-size: 90%;
				list-style-type: square;

				&::marker {
					color: var(--brand-dimmed);
				}

				&:not(:last-child) {
					margin-bottom: var(--size-2);
				}
			}
		}
	}
</style>

<BaseLayout title="Home | Sergio Barria">
